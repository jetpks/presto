# local cloudgate
cgunstable() {
  if [ -z "$PRE_CG_UNSTABLE_PATH" ]; then
    local_cg_bin="$HOME/src/cloudgate/bin"

    export PRE_CG_UNSTABLE_PATH=$PATH
    export PATH="$local_cg_bin:$PATH"
  fi
}

cgstable() {
  if [ ! -z "$PRE_CG_UNSTABLE_PATH" ]; then
    export PATH="$PRE_CG_UNSTABLE_PATH"
    unset PRE_CG_UNSTABLE_PATH
  fi
}
