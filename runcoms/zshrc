# my date
function pdate {
  local dt=$(date '+%Y%b%e/%k.%M.%S')
  echo $dt:l | tr -d ' '
}

# notes
noteloc=${HOME}/ic/Documents/instructure/notes/
function note {
  local notefile="${noteloc}/$(pdate).md"
  local notedir=$(dirname $notefile)
  [ -d $notedir ] || mkdir $notedir
  subl $notefile
}

