# ssh key
# suppress jobs output
for key in hydrogen pretzel curvy toolsmiths-key-safe; do
  if [[ -e "${HOME}/.ssh/${key}" ]]; then
    ssh-add -qK ${HOME}/.ssh/${key} 2>/dev/null &!
  fi
done

